<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/popup_info"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical" 
    android:background="@drawable/shape_popup" >

     <ImageView
        android:id="@+id/iv_info_popup"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:layout_marginLeft="5dp"
        android:contentDescription="@string/logoHxC"
        android:src="@drawable/info_popup" />
    
    <TextView
        android:id="@+id/textv_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_popup"
        android:textStyle="bold"
        android:textColor="@color/background_main" 
        android:layout_gravity="right" 
        android:layout_marginTop="-25dp"
        android:layout_marginRight="10dp"/>

    <TextView
        android:id="@+id/textView1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/background_main"
        android:textStyle="italic"
        android:layout_gravity="center"
        android:layout_marginTop="25dp"/>

</LinearLayout>