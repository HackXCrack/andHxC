<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    
    <style name="BackgroundTitleHeaderCustom">
        <item name="android:background">@color/background_title</item>
    </style>
    <style name="StyleTitleHeaderCustom">
        <item name="android:paddingLeft">10dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/background_main</item>
    </style>
    <style name="ThemeCustom" parent="android:Theme">
        <item name="android:windowTitleSize">40dp</item>
        <item name="android:windowTitleBackgroundStyle">@style/BackgroundTitleHeaderCustom</item>
        <item name="android:windowTitleStyle">@style/StyleTitleHeaderCustom</item>
    </style>
    
</resources>