<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="es.hackxcrack.andHxC"
          android:versionCode="1"
          android:versionName="1.0">

  <uses-sdk android:minSdkVersion="4"
      android:targetSdkVersion="17" />

  <uses-permission android:name="android.permission.INTERNET" />
  <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

  <application
      android:icon="@drawable/ic_launcher"
      android:label="@string/app_name"
      android:theme="@style/Oscuro"
      android:allowBackup="true" >

    <activity android:name="Main"
              android:label="@string/forum_name">

      <intent-filter>
        <action android:name="android.intent.action.MAIN" />
        <category android:name="android.intent.category.LAUNCHER" />
      </intent-filter>
    </activity>

    <activity android:name="Login"
              android:label="@string/forum_name" />

    <activity android:name="SubMain"
        android:label="@string/forum_name" />

    <activity android:name="ForumCategory"
              android:label="@string/forum_name" />

    <activity android:name="ForumThread"
              android:label="@string/forum_name" />

    <activity android:name="ForumNews"
              android:label="@string/forum_name"/>

    <activity android:name="Settings"
              android:label="@string/forum_name"/>

  </application>
</manifest>
